3.	import pandas as pd

# Лабораторна робота №6
employees = {
    'Кузін': 'вул. Кузнечна, 1',
    'Сидоров': 'вул. Перша, 5',
    'Куравльов': 'вул. Сонячна, 10',
    'Іванов': 'вул. Дружби, 7',
    'Кудін': 'вул. Лісова, 3',
    'Петров': 'вул. Робоча, 15',
    'Кульков': 'вул. Головна, 8',
    'Соколов': 'вул. Центральна, 12',
    'Кубиків': 'вул. Зелена, 6',
    'Сміт': 'вул. Нова, 11'
}

# Перетворення словника в датафрейм
df = pd.DataFrame(list(employees.items()), columns=['Прізвище', 'Адреса'])

# Доповнення даними (за необхідності)
# Наприклад, додаємо інформацію про заробітню плату
salaries = {
    'Кузін': 50000,
    'Сидоров': 55000,
    'Куравльов': 60000,
    'Іванов': 52000,
    'Кудін': 48000,
    'Петров': 53000,
    'Кульков': 58000,
    'Соколов': 56000,
    'Кубиків': 54000,
    'Сміт': 51000
}

df['Заробітна плата'] = df['Прізвище'].map(salaries)

# Виведення датафрейму на екран
print("Даний датафрейм:")
print(df)
print("\n")

# Введення прізвищ користувача для аналізу
surnames_to_check = input("Введіть прізвища для аналізу (розділяйте комою): ").split(', ')
# Фільтрація датафрейму за введеними прізвищами
filtered_df = df[df['Прізвище'].isin(surnames_to_check)]

# Виведення результату фільтрації на екран
print("\nЗаробітна плата за введеними прізвищами:")
print(filtered_df[['Прізвище', 'Заробітна плата']])

# Агрегація та групування даних
agg_result = filtered_df['Заробітна плата'].mean()

# Виведення результату агрегації та групування на екран
print("\nСередня заробітна плата за введеними прізвищами:")
print(agg_result)

5.	import pandas as pd
import matplotlib.pyplot as plt

# Ваша URL або шлях до CSV файлу
url_to_csv_file = 'comptagevelo20152.csv'

# Зчитуємо дані з CSV файлу
df = pd.read_csv(url_to_csv_file)

# Перетворюємо стовпець з датою в об'єкт datetime
df['Date'] = pd.to_datetime(df['Date'], format='%d/%m/%Y')

# Створюємо новий стовпець, що містить місяць
df['Month'] = df['Date'].dt.month

# Групуєємо дані за місяцем та обчислюємо загальну кількість велосипедистів для кожного місяця
monthly_counts = df.groupby('Month')['Berri1'].sum()

# Знаходимо найпопулярніший місяць
most_popular_month = monthly_counts.idxmax()

print(f"Найбільш популярний місяць для велосипедистів: {most_popular_month}")

# Створюємо графік
plt.figure(figsize=(10, 6))
plt.plot(monthly_counts, marker='o', linestyle='-')
plt.title('Використання велодоріжок у 2015 році')
plt.xlabel('Місяць')
plt.ylabel('Кількість велосипедистів')
plt.grid(True)
plt.show()
